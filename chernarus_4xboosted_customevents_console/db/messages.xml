<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<messages>
    <message>
        <deadline>240</deadline> <!-- this is the timer between restarts -->
        <shutdown>1</shutdown> <!-- tells the server to RESTART when deadline is reached -->
        <text>This server (#name) will shutdown in #tmin minutes.</text> <!-- message text -->
    </message>
    <message>
        <delay>2</delay> 
        <onconnect>1</onconnect>
        <text>Welcome to my server #name</text> 
    </message>
    <message>
        <repeat>15</repeat>
        <text>You're playing on my server (#name). Thank you.</text> 
    </message>
</messages>